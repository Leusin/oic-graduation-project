<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App.OIC" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/lightblue</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/app_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi = "l" >@color/lightblue</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- 스플래시 스크린-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/lightblue</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>
    <!-- 툴바 설정-->
    <style name="Toolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- <item name="android:fontFamily">@font/notosans_kr_medium</item> -->
    </style>
    <!-- 검색 뷰 설정-->
    <style name="SearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">#191919</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">#707070</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/darkblue</item>
    </style>

</resources>